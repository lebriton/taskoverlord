{
  "build": {
    "beforeDevCommand": "pnpm -F frontend dev",
    "beforeBuildCommand": "pnpm -F frontend build",
    "frontendDist": "../../../frontend/dist",
    "devUrl": "http://localhost:1420"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "productName": "TaskOverlord",
  "mainBinaryName": "TaskOverlord",
  "version": "0.1.0",
  "identifier": "com.taskoverlord.app",
  "plugins": {
    "cli": {
      "description": "TaskOverlord CLI plugin",
      "args": [
        {
          "short": "t",
          "name": "export-ts-types",
          "description": "Verbosity level"
        }
      ]
    }
  },
  "app": {
    "security": {
      "csp": null
    },
    "windows": [
      {
        "title": "TaskOverlord",
        "width": 1080,
        "height": 720
      }
    ]
  }
}
